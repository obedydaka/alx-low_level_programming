#include "main.h"

/**
 * binary_to_uint - This finction converts binary number to
 * an unsigned integer
 * @b: A pointer to binary string
 * Return: unsigned integer converted number
 */

unsigned int binary_to_uint(const char *b)
{
	usigned int result = 0;
	usigned base = 1;
	bool valid_binary = true;

	if (b == NULL)
		return 0;

	size_t len = strlen(b);
	if (len == 0)
		return 0;

	for (int i = len - 1; i >= 0; i--)
	{
		if (b[i] == '0')
		{
			base *= 2;
		}
		else if (b[i] == '1')
		{
			result += base;
			base *= 2;
		}
		else
		{
			valid_binary = false;
			break;
		}
	}
	return valid_binary ? result : 0;
}
